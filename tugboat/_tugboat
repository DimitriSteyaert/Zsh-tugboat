#compdef tugboat
_tugboat() {
  local -a commands
  commands=(
    'add-key:Upload an ssh public key.'
    'authorize:Authorize a DigitalOcean account with tugboat.'
    'create:Create a droplet.'
    'destroy:Destroy a droplet.'
    'destroy_image:Destroy an image.'
    'droplets:Retrieve a list of your droplets.'
    'halt:Shutdown a droplet.'
    'help:Describe commands or a specific command.'
    'images:Retrieve a list of your images.'
    'info:Show a droplets information.'
    'info_image:Show an images information.'
    'keys:Show available SSH keys.'
    'password-reset:Reset root password.'
    'rebuild:Rebuild a droplet.'
    'regions:Show regions.'
    'resize:Resize a droplet.'
    'restart:Restart a droplet.'
    'sizes:Show available droplet sizes.'
    'snapshot:Queue a snapshot of the droplet.'
    'ssh:SSH into a droplet.'
    'start:Start a droplet.'
    'verify:Check your DigitalOcean credentials.'
    'version:Show version.'
    'wait:Wait for a droplet to reach a state.'
  )

  if (( CURRENT == 2 )); then
    _describe -t commands 'commands' commands
  fi

  return 0
}

_tugboat
